[color]
    ui = auto

[color "diff"]
    meta = blue bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "branch"]
    current = yellow reverse
    local = yellow bold
    remote = green bold
    plain = red bold

[color "status"]
    added = yellow
    changed = green bold
    untracked = blue bold

[alias]
	ln = log --pretty=format:%Cred%h%Creset' '%an' '%Cblue%cr%Creset%Cgreen%d%Creset' '%s --graph --color --decorate
